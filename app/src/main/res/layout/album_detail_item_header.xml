<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.crrl.beatplayer.utils.GeneralUtils" />

        <import type="android.view.View" />

        <variable
            name="album"
            type="com.crrl.beatplayer.models.Album" />

        <variable
            name="totalDuration"
            type="Integer" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="?colorPrimarySecondary"
            android:src="@drawable/ic_empty_cover" />

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/album_detail_shape"
            android:paddingStart="@dimen/padding_12"
            android:paddingTop="@dimen/padding_12"
            android:paddingEnd="@dimen/padding_12"
            android:layout_marginTop="-25dp"
            android:layout_below="@id/cover">

            <TextView
                style="@style/TitleTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{album.title}"
                android:textColor="?titleTextColor"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{album.artist}"
                android:textColor="?subTitleTextColor"
                android:textSize="15sp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{(album.year == 0 ? @string/unknown : String.valueOf(album.year))+' '+@string/separator+' '+GeneralUtils.INSTANCE.formatMilliseconds((long)totalDuration)}"
                android:textColor="?subTitleTextColor"
                android:textSize="15sp"
                android:gravity="center" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_size"
            android:layout_below="@id/info">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/song_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/padding_15"
                    android:paddingEnd="@dimen/padding_12"
                    android:text="@{@plurals/number_of_songs(album.songCount, album.songCount)}"
                    android:textColor="?titleTextColor"
                    android:textSize="@dimen/title_text_size" />

                <ImageButton
                    android:id="@+id/shuffle_album_song"
                    android:layout_width="@dimen/btn_size"
                    android:layout_height="@dimen/btn_size"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:background="@drawable/btn_ripple"
                    android:contentDescription="@string/cover"
                    android:src="@drawable/ic_shuffle"
                    android:tint="?btnTintColor"
                    android:visibility="@{album.songCount > 1 ? View.VISIBLE : View.GONE}" />

                <ImageButton
                    android:id="@+id/play_all_album_song"
                    android:layout_width="@dimen/btn_size"
                    android:layout_height="@dimen/btn_size"
                    android:background="@drawable/btn_ripple"
                    android:contentDescription="@string/cover"
                    android:src="@drawable/ic_play"
                    android:tint="?btnTintColor" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>